<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="CustomTheme" parent="android:Theme.Holo.Light">
    <item name="android:icon">@android:color/transparent</item>
  </style>
  <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
 <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#ffffff</item>
    </style> 


  <style name="MyActionBar.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:titleTextStyle">@style/MyActionBar.ActionBar.TitleTextStyle</item>
  </style>

  <style name="MyActionBar.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#ffffff</item>
  </style>

</resources>